@model ZapatillasEditVm
@{
    ViewData["Title"] = "Nuevo/Editar Zapatilla";
}
<form method="post" asp-action="UpSert" class="w-75">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ZapatillaId" />

    <div class="border p-3 bg-white">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">@(Model.ZapatillaId == 0 ? "Agregar Zapatilla" : "Editar Zapatilla")</h2>

        </div>
        <div class="form-group row py-2">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="form-group row py-2">
            <label asp-for="Modelo"></label>
            <input asp-for="Modelo" class="form-control" />
            <span asp-validation-for="Modelo" class="text-danger"></span>

        </div>
        <div class="form-group row py-2">
            <label asp-for="MarcaId"></label>
            <select asp-for="MarcaId" asp-items="Model.Marca" class="form-control">
                <option selected disabled>Select Marca</option>
            </select>
            <span asp-validation-for="MarcaId" class="text-danger"></span>

        </div>
        <div class="form-group row py-2">
            <label asp-for="DeporteId"></label>
            <select asp-for="DeporteId" asp-items="Model.Deporte" class="form-control">
                <option selected disabled>Select Deporte</option>
            </select>
            <span asp-validation-for="DeporteId" class="text-danger"></span>

        </div>
        <div class="form-group row py-2">
            <label asp-for="ColoresId"></label>
            <select asp-for="ColoresId" asp-items="Model.Color" class="form-control">
                <option selected disabled>Select City</option>
            </select>
            <span asp-validation-for="ColoresId" class="text-danger"></span>

        </div>
        <div class="form-group row py-2">
            <label asp-for="GeneroId"></label>
            <select asp-for="GeneroId" asp-items="Model.Genero" class="form-control">
                <option selected disabled>Select Genero</option>
            </select>
            <span asp-validation-for="GeneroId" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="form-group col-6 py-2">
                <label asp-for="Precio"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>

            </div>
        </div>
        @if (Model.ZapatillaId == 0)
        {
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy2-fill"></i>
                Crear
            </button>
        }
        else
        {
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-pencil"></i>
                Editar
            </button>

        }
        <a asp-action="Index" class="btn btn-success btn-block">
            <i class="bi bi-backspace"></i>
            Back to List
        </a>


    </div>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
    

